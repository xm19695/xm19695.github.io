{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Covid Cases in alternate South West and Welsh cities ",
      "subtitle": "",
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 10,
      "anchor": "start",
      "color": "black"
    },
    "data": {
      "url": "https://raw.githubusercontent.com/1920643/1920643.github.io/main/covidData.csv",
      "format": {"type": "csv"}
    },
    "transform": [
      {
        "filter": {
          "field": "areaName",
          "oneOf": ["Swansea", "Gloucester", "Plymouth"]
        }
      }
    ],
    "height": 300,
    "width": 450,
    "mark": {"type": "line", "point": false},
    "encoding": {
      "x": {
        "field": "date",
        "type": "temporal",
        "title": null,
        "axis": {"grid": false}
      },
      "y": {
        "field": "newCasesBySpecimenDateRollingRate",
        "type": "quantitative",
        "title": null,
        "axis": {"grid": false}
      },
      "color": {
        "field": "areaName",
        "type": "nominal",
        "scale": {"scheme": "set1"},
        "title": "",
        "legend": {"orient": "top-left", "fillColor": "#FcFdFd"}
      }
    }
  }