{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "title": {
      "text": "Life Expectancy: UK regions",
      "subtitle": "Life expectancy across the UK from 2003-2019. Source: ONS.GOV.UK",
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 12,
      "anchor": "start",
      "color": "green",
      "fontSize": 16
    },
    "description": " ",
    "data": {
      "url": "https://raw.githubusercontent.com/xm19695/xm19695.github.io/main/lifeexpectancybyregion.csv",
      "format": {"type": "csv"}
    },
    "height": 300,
    "width": "container",
    "mark": {"type": "line"},
    "selection": {
      "Region": {
        "type": "single",
        "fields": ["Geography"],
        "bind": {
          "input": "select",
          "options": [
            null,
            "England",
            "Wales",
            "Scotland",
            "Northern Ireland"
          ],
          "name": "Pick a region: "
        }
      }
    },
    "transform": [{"filter": {"selection": "Region"}}],
    "encoding": {
      "x": {
        "field": "year",
        "type": "temporal",
        "title": year,
        "axis": {
          "titleColor": "black",
          "titleFontSize": 12,
          "grid": false,
          "labelFontSize": 10
        }
      },
      "y": {
        "field": "",
        "type": "quantitative",
        "title": "Life Expectancy",
        "scale": {"domain": [70, 85]},
        "axis": {"titleColor": "black", "titleFontSize": 12, "labelFontSize": 10}
      },
      "color": {
        "field": "Geography",
        "type": "nominal",
        "legend": null,
        "scale": {"scheme": "greens"}
      }
    }
  }