{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

    "data": {
       "url": "https://raw.githubusercontent.com/xm19695/xm19695.github.io/main/lifeexpectancyEngland.csv"
       },


    "title": {
        "text": "Life Expectancy in England",
        "subtitle": "Source: ONS.GOV.UK",
        "subtitleFontStyle":"italic",
        "subtitleFontSize":10,
        "anchor": "start",
        "color": "black"},

    "width":300,
    "height":300,

    "mark":{
        "type": "line",
        "color":"orange",
        "strokeWidth":2,
        "opacity":1},
 
    "encoding": {
       "x": {
          "field": "time_period",
          "type": "temporal",
          "title":null},
       
        "y": {
          "field": "Life_Expectancy",
          "type": "quantitative",
          "title": "Life Expectancy",
          "scale": {"domain": [70, 85]},
          "axis": {"titleColor": "black", "titleFontSize": 12, "labelFontSize": 10}
        },
       "color": {
          "field": "Geography",
          "type": "nominal",
          "legend": null,
          "scale": {"scheme": "greens"}
          }
       }
}